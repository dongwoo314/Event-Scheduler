# Environment Configuration (SQLite 버전)
NODE_ENV=development

# Server Configuration
PORT=3001
CORS_ORIGIN=http://localhost:3000

# Database Configuration (SQLite - PostgreSQL 설치 문제로 임시 사용)
DB_DIALECT=sqlite
DB_STORAGE=./database.sqlite

# JWT Configuration
JWT_SECRET=event-scheduler-super-secret-jwt-key-for-development-only-2024-minimum-32-chars
JWT_REFRESH_SECRET=event-scheduler-refresh-secret-key-for-development-only-2024-minimum-32-chars
JWT_EXPIRES_IN=7d

# Email Configuration (나중에 설정)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# Firebase Configuration (나중에 설정)
FIREBASE_PROJECT_ID=your-firebase-project-id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development Settings
DEBUG_SQL=true
ENABLE_CORS=true
