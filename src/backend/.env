# Environment Configuration (SQLite 개발용)
NODE_ENV=development

# Server Configuration
PORT=3001
CORS_ORIGIN=http://localhost:3000

# JWT Configuration
JWT_SECRET=event-scheduler-super-secret-jwt-key-for-development-only-2024-minimum-32-chars
JWT_REFRESH_SECRET=event-scheduler-refresh-secret-key-for-development-only-2024-minimum-32-chars
JWT_EXPIRES_IN=7d

# Email Configuration (개발 중에는 비활성화)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=

# Firebase Configuration (개발 중에는 비활성화)
FIREBASE_PROJECT_ID=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development Settings
DEBUG_SQL=false
ENABLE_CORS=true

# SQLite 설정
DB_DIALECT=sqlite
DB_STORAGE=./database.sqlite
